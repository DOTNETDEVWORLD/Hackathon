
@model Hackathon.Domain.Page
@using Hackathon.Domain.Questions;

@{

    for (int i = 0; i < Model.Questions.Count; i++)
    {
        <strong>@Html.Display(Model.Questions[i].Libelle) : </strong>

        if (Model.Questions[i] is QuestionText)
        {
            <div>
                @Html.TextBox(Model.Questions[i].Libelle)
            </div>
        }

        if (Model.Questions[i] is QuestionChoixMultiples)
        {

            var questionChoixMultiples = Model.Questions[i] as QuestionChoixMultiples;
            foreach (var proposition in questionChoixMultiples.Propositions)
            {
                <div>
                    @Html.Label(proposition)
                    @Html.CheckBox(Model.Questions[i].Libelle)
                </div>
            }
        }

        if (Model.Questions[i] is QuestionChoixUnique)
        {
            var questionChoixMultiples = Model.Questions[i] as QuestionChoixUnique;
            foreach (var proposition in questionChoixMultiples.Propositions)
            {
                <div>
                    @Html.Label(proposition)
                    @Html.RadioButton(Model.Questions[i].Libelle, proposition)
                </div>
            }
        }

        <br />
    }

}