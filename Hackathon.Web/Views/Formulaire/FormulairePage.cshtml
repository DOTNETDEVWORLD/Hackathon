
@model Hackathon.Domain.Page
@using Hackathon.Domain.Questions;



@{

    for (int i = 0; i < Model.Questions.Count; i++)
    {
        @Html.TextBoxFor(x => x.Questions[i].Libelle)
    }

    @Html.TextBoxFor(x => x.Test)

    foreach (var question in Model.Questions)
    {
        <strong>@Html.Label(question.Libelle) : </strong>

        if (question is QuestionText)
        {   
            <div>
                @Html.TextBox(question.Libelle)
            </div>
        }

        if (question is QuestionChoixMultiples)
        {

            var questionChoixMultiples = question as QuestionChoixMultiples;
            foreach (var proposition in questionChoixMultiples.Propositions)
            {
                <div>
                    @Html.Label(proposition)
                    @Html.CheckBox(question.Libelle)
                </div>
            }
        }

        if (question is QuestionChoixUnique)
        {
            var questionChoixMultiples = question as QuestionChoixUnique;
            foreach (var proposition in questionChoixMultiples.Propositions)
            {
                <div>
                    @Html.Label(proposition)
                    @Html.RadioButton(question.Libelle, proposition)
                </div>
            }
        }

        <br />
    }

}